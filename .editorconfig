# http://editorconfig.org
root = true

[*]
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,py}]
indent_size = 2
charset = utf-8

# 4 space indentation
[*.{less,hbs}]
indent_style = space
indent_size = 4
